<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_chat_item_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_yourname"
                android:text="you"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="message1message1message1message1message1message1message1message1message1message1"
                android:background="@drawable/thm_chatroom_message_bubble_you_bg"
                android:textColor="#000000"
                android:id="@+id/tv_message_you_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:text="message2"
                android:background="@drawable/thm_chatroom_message_bubble_you_bg_no_tail"
                android:textColor="#000000"
                android:id="@+id/tv_message_you_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_you"
            android:layout_gravity="bottom"
            android:paddingLeft="8dp"
            android:textColor="#000000"
            android:text="오전 9:41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_chat_item_me"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time_me"
            android:text="오후 7:50"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp" />

        <TextView
            android:text="message1message1message1message1message1message1message1message1message1"
            android:textColor="#000000"
            android:background="@drawable/thm_chatroom_message_bubble_me_bg"
            android:id="@+id/tv_message_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>